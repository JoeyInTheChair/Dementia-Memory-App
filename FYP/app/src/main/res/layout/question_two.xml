<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/correctGuesses"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textColor="#673AB7"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/guessWordFour"
        app:layout_constraintEnd_toEndOf="@+id/guessWordThree"
        app:layout_constraintStart_toStartOf="@+id/guessWordThree"
        app:layout_constraintTop_toBottomOf="@+id/guessWordTwo" />

    <TextView
        android:id="@+id/guessWordThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="338dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="338dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessWordTwo" />

    <TextView
        android:id="@+id/guessWordTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="338dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="338dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessWordOne" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="68dp"
        android:text="Remember These 5 Words"
        android:textColor="#000000"
        android:textSize="65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guessWordOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="338dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="338dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/guessWordFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="338dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="338dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessWordFour" />

    <TextView
        android:id="@+id/guessWordFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="338dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="338dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessWordThree" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="900dp"
        android:layout_marginBottom="132dp"
        android:text="GO"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/continueToQThree"
        android:layout_width="256dp"
        android:layout_height="80dp"
        android:layout_marginTop="900dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="132dp"
        android:text="Continue"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>