<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0097A7">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add reminder"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/task_title"
        android:layout_width="685dp"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/round"
        android:ems="15"
        android:hint="Task Title"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/task_description"
        android:layout_width="685dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round"
        android:ems="15"
        android:hint="Task Description"
        android:inputType="textPersonName"
        android:linksClickable="false"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_title" />

    <TextView
        android:id="@+id/task_date"
        android:layout_width="685dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round"
        android:ems="15"
        android:hint="Task Date"
        android:linksClickable="false"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_description" />

    <TextView
        android:id="@+id/task_time"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/round"
        android:ems="15"
        android:gravity="center"
        android:hint="Task Time"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_date" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="211dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="500dp"
        android:layout_marginRight="500dp"
        android:text="@android:string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:backgroundTint="#9A3838"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_time" />

    <Button
        android:id="@+id/addTaskToDB"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_marginStart="500dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="40dp"
        android:text="Add Reminder"
        android:textColor="#0097A7"
        android:textSize="25sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_time" />

    <Button
        android:id="@+id/select_time"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:text="Select Time"
        android:textColor="#000000"
        android:textSize="30sp"
        android:background="@drawable/round"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_date" />


</androidx.constraintlayout.widget.ConstraintLayout>